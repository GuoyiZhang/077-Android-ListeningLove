        <!--            &lt;!&ndash;                <category android:name="android.intent.category.DEFAULT" />&ndash;&gt;-->

        <!--            &lt;!&ndash;                <data android:mimeType="text/plain" />&ndash;&gt;-->
        <!--            &lt;!&ndash;            </intent-filter>&ndash;&gt;-->
